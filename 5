#include <iostream>

int main() {
    float n1, n2, n3, n4;
    float suma, promedio;

    std::cout << "Ingrese el primer número: ";
    std::cin >> n1;

    std::cout << "Ingrese el segundo número: ";
    std::cin >> n2;

    std::cout << "Ingrese el tercer número: ";
    std::cin >> n3;

    std::cout << "Ingrese el cuarto número: ";
    std::cin >> n4;

    suma = n1 + n2 + n3 + n4;
    promedio = suma / 4;

    std::cout << "La suma de los números es: " << suma << std::endl;
    std::cout << "El promedio de los números es: " << promedio << std::endl;

    return 0;
}
