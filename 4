#include <iostream>

int main() {
    float num1, num2, num3, num4;
    float suma, producto;

    std::cout << "Ingrese el primer número: ";
    std::cin >> num1;

    std::cout << "Ingrese el segundo número: ";
    std::cin >> num2;

    std::cout << "Ingrese el tercer número: ";
    std::cin >> num3;

    std::cout << "Ingrese el cuarto número: ";
    std::cin >> num4;

    suma = num1 + num2;
    producto = num3 * num4;

    std::cout << "La suma de los dos primeros números es: " << suma << std::endl;
    std::cout << "El producto del tercer y cuarto número es: " << producto << std::endl;

    return 0;
}
